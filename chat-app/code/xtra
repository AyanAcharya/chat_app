<body>



  <div class="modal-bg" id="modalBackground">
  
    <div class="modal-content">
      <h2>Add New University</h2>
      <!-- Add your form elements or input fields here -->
      <button onclick="closeModal()">Close</button>
    </div>
  </div>

 
</body>
<script>
  // Function to display the modal
  function showModal() {
    document.getElementById("modalBackground").style.display = "flex";
  }

  // Function to close the modal
  function closeModal() {
    document.getElementById("modalBackground").style.display = "none";
  }

  // Attach the showModal function to the "add new" button's click event
  document.querySelector('button').addEventListener('click', showModal);
</script>
