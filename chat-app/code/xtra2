    <div class="mt-6">
        <label>Select your ethnicity:</label>
    </div>
    <div class="mt-2 flex flex-wrap gap-1">
        <?php
        $result = get_ethnicity($mysqli);
        while ($row = $result->fetch_assoc()) {
            echo '<button class="px-6 py-2 rounded-3xl w-fit border border-gray-300 text-gray-500" name="ethnicity[]" value="' . $row['id'] . '">' . $row['ethnicity'] . '</button>';
        }
        ?>
    </div>
    <button type="submit">Submit</button>
</form>





